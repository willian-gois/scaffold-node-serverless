{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": ".build",
    "paths": {
      "@handlers/*": ["./src/handlers/*"]
    },
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
